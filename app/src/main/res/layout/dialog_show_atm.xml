<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/bg_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_title_dialog"
            android:padding="10sp"
            android:text="SEARCHING ATM"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"

            >

            <Button
                android:id="@+id/around"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="Option"
                android:background="@drawable/btn_search_around_state"
                android:layout_marginRight="15dp"
                />

            <Button
                android:id="@+id/option"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_search_around_state"
                android:text="Around" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search"
            android:gravity="center"
            android:layout_margin="15sp"
            android:orientation="horizontal"
            android:layout_marginBottom="15sp"
            >

            <Button
                android:id="@+id/id_btn_cancel_searching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_huy_state"
                android:text="Cancel"

                />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>